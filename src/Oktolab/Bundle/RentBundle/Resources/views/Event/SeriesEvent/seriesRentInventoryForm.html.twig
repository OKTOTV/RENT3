<div id="rent-series-inventory-form">
    {{ form_start(form, {'attr': {'class': 'aui', 'data-value': form.vars.id } }) }}
        <fieldset>
            {{ form_errors(form) }}
            <h3>{{ 'series_event.form'|trans }}</h3>
            {{ form_row(form.end, {'attr': {'class': 'text datetime'} }) }}
            {{ form_row(form.repetition) }}
            <h3>{{'series_event.event_form'|trans }}</h3>
            <div class="field-group">
                {{ form_label(form.costunit) }}
                <input type="text" id="orb_series_costunit_typeahead" class="text">
            </div>

            {{ form_row(form.contact) }}
            {{ form_row(form.event_begin, {'attr': {'class': 'text event-datetime'} }) }}
            {{ form_row(form.event_end, {'attr': {'class': 'text event-datetime'} }) }}
        </fieldset>

        <h3>{{ 'event.rentable_objects'|trans }}</h3>
        <fieldset>
            <div class="field-group">
                <label for="inventory-search-field">{{ 'generic.search'|trans }}</label>
                <input class="text" type="text" id="orb_series_event_form_inventory_search" name="inventory-search-field" title="{{ 'Search for Barcodes, Items, Sets, ...'|trans }}" />
                <div class="description">{{ 'event.searchFor'|trans }} {{'generic.barcodes'|trans}}, {{'inventory.items'|trans}}, {{'inventory.sets'|trans}}, ...</div>
            </div>

            <div class="field-group aui-oktolab-form-table">
                <label>{{ 'event.objects'|trans }}</label>
                <table class="aui">
                    <thead>
                        <tr>
                            <th id="basic-barcode">{{ 'generic.barcode'|trans }}</th>
                            <th id="basic-name">{{ 'generic.name'|trans }}</th>
                            <th id="basic-action"><span class="aui-icon aui-icon-small aui-iconfont-configure">{{ 'Actions'|trans }}</span></th>
                        </tr>
                    </thead>
                    <tbody id="orb_series_event_form_object_table" class="event-objects" data-index="-1" data-prototype="{% filter escape %}{% include 'OktolabRentBundle:Event/SeriesEvent:objectPrototype.html.twig' %}{% endfilter %}">
                    </tbody>
                </table>
            </div>
        </fieldset>
        <div class="hidden">
            {{ form_row(form.costunit) }}
        </div>

        <div class="buttons-container">
            <div class="buttons">
            </div>
        </div>

        {% do form.objects.setRendered %}
    {{ form_end(form) }}
</div>
