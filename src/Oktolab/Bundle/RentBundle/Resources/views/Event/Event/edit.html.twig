{% extends 'OktolabRentBundle::layoutFocusedTask.html.twig' %}

{% block content_header %}
    <div class="aui-page-header-inner">
        <div class="aui-page-header-main">
            <h1>{{ 'Rental Track' | trans }}</h1>
        </div>
        <div class="aui-page-header-actions">
            <ol class="aui-progress-tracker aui-progress-tracker-inverted">
                {% set active = 'Bearbeiten' %}
                {# for i in [ 'Create', 'Edit', 'Rent', 'Back', 'Check', 'Closed' ] #}
                {% for i in [ 'Erstellen', 'Bearbeiten', 'Verleihen', 'Zurücknehmen', 'Prüfen', 'Abschließen' ] %}
                    {% if active == i %}
                        <li class="aui-progress-tracker-step aui-progress-tracker-step-current" style="{{ 100 / loop.length }}">
                    {% else %}
                        <li class="aui-progress-tracker-step" style="{{ 100 / loop.length }}">
                    {% endif %}
                        <span>{{ i | trans }}</span>
                    </li>
                {% endfor %}
            </ol>
        </div>
    </div>
{% endblock %}

{% block content %}
    <h2>{{ 'Edit' | trans }} - {{ form.vars.value.name }}</h2>
    {{ form_start(form, {'attr': {'class': 'aui'} }) }}
        <fieldset>
            {{ form_errors(form) }}
            {{ form_row(form.name) }}
            {{ form_row(form.description) }}
            {{ form_row(form.begin) }}
            {{ form_row(form.end) }}
        </fieldset>

        <h3>{{ 'Rentable Objects' | trans }}</h3>
        <fieldset>
            <div class="field-group">
                <label for="oktolabrentbundle_event_editform_searchfield">{{ 'Search' | trans }}</label>
                <input class="text long-field" type="text" id="oktolabrentbundle_event_editform_searchfield" name="oktolab_rentbundle_editform_searchfield" title="{% trans %}Search for Barcodes, Items, Sets, ...{% endtrans %}">
                <span class="aui-icon aui-icon-small aui-iconfont-search">{{ 'Search' | trans }}</span>
                <div class="description">{{ 'Search for Barcodes, Items, Sets, ...' | trans }}</div>
            </div>

            <div class="field-group aui-oktolab-form-table">
                <label>{{ 'Objects' | trans }}</label>
                <table class="aui">
                    <thead>
                        <tr>
                            <th id="basic-barcode">{{ 'Barcode' | trans }}</th>
                            <th id="basic-name">{{ 'Name' | trans }}</th>
                            <th id="basic-action"><span class="aui-icon aui-icon-small aui-iconfont-configure">{{ 'Actions' | trans }}</span></th>
                        </tr>
                    </thead>
                    <tbody class="event-objects" data-prototype="{% filter escape %}{% include 'OktolabRentBundle:Event:eventObjectPrototype.html.twig' %}{% endfilter %}">
                        {% if objects %}
                            {% for object in objects %}
                                <tr>
                                    <td>{{ object.barcode }}</td>
                                    <td>{{ object.title }}</td>
                                    <td>
                                        <a href="#"><span class="aui-icon aui-icon-small aui-iconfont-remove remove-object" data-value="{{ object.type ~ object.id }}">{{ 'Remove'|trans }}</span></a>
                                        <span class="aui-icon aui-icon-small aui-iconfont-approve">{{ 'Approve' | trans }}</span>
                                        <span class="aui-icon aui-icon-success">{{ 'Approve' | trans }}</span>
                                    </td>
                                </tr>
                            {% endfor %}
                        {% endif %}
                    </tbody>
                </table>
            </div>
        </fieldset>

        {{ form.vars.name }}
        <fieldset class="hidden oktolab-event-objects"
                  data-index="{{ objects|length }}"
                  data-prototype="{{ '<div data-value="{{value}}"><input id="%1$s_objects_{{index}}_type" name="%1$s[objects][{{index}}][type]" value="{{type}}" /><input id="%1$s_{{index}}_object" name="%1$s[objects][{{index}}][object]" value="{{id}}" /></div>'|format(form.vars.name)|e }}">
            {% if objects %}
                {% for object in form.objects %}
                    {#{ form.vars.value.name }}
                    {{ dump(object) }#}
                    {{ form_row(object, { 'attr': { 'data-value': object.vars.value.type ~ object.vars.value.object } }) }}
                {% endfor %}
            {% endif %}
        </fieldset>

        <fieldset class="hidden oktolab-event-scanned-objects"
                  data-index="0"
                  data-prototype="{{ '<input id="oktolabrentbundle_event_scanned_object_{{index}}" value="{{value}}"'|e }}">
        </fieldset>

        <div class="buttons-container">
            <div class="buttons">
                {{ form_widget(form.rent, {'attr': { 'class': 'aui-button aui-button-primary', 'aria-disabled': 'true' } }) }}
                {{ form_widget(form.update, {'attr': { 'class': 'aui-button' } }) }}
                {# form_widget(form.delete, {'attr': { 'class': 'aui-button' } }) #}
                {{ form_widget(form.cancel, {'attr': { 'class': 'aui-button aui-button-link' } }) }}
            </div>
        </div>
        {% do form.objects.setRendered %}
        {% do form.delete.setRendered %}
    {{ form_end(form) }}

{% endblock %}