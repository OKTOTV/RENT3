{% extends 'OktolabRentBundle:Admin:Contact\\base.html.twig' %}

{%block buttons%}
    <a class="aui-button" href="{{ path('admin_contact') }}">{{ 'generic.overview' | trans }}</a>
{%endblock%}
{% block content %}
{{ parent() }}
<form class="aui">
    <fieldset>
        <div class="field-group viewMode">
            <label>{{ 'admin.contact.name' | trans }}</label>
            <span class="field-value"><a href="{{ hub_redirect_url ~ contact.guid }}">{{ contact.name }}</a></span>
        </div>
        <div class="field-group viewMode aui-oktolab-form-table">
            <label>{{ 'admin.contact.costunits' | trans }}</label>
            {% if contact.costunits|length == 0 %}
                <span class="field-value">{{'admin.contact.noCostunit'|trans}}</span>
            {% else %}
                <table class="aui">
                    <thead>
                        <tr>
                            <th id="name">{{ 'admin.contact.costunit' | trans }}</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for costunit in contact.costunits %}
                            <tr>
                                <td headers="name"><a href="{{ path('admin_costunit_show', {'id': costunit.id}) }}">{{ costunit.name }}</a></td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            {% endif %}
        </div>
    </fieldset>
</form>
{% endblock %}
