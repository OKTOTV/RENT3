{% extends 'OktolabRentBundle:Admin:Contact\\base.html.twig' %}

{% block buttons %}
{% endblock %}
{% block content %}
    {{ parent() }}

    {% if contacts|length == 0 %}
        <br />
        {{ 'admin.contact.zeroContacts' | trans }}
    {% else %}
        <table class="aui">
            <thead>
                <tr>
                    <th id="title">{{ 'admin.contact.name'|trans }}</th>
                    <th id="costunit">{{'admin.contact.costunit'|trans }}</th>
                </tr>
            </thead>
            <tbody>
            {% for contact in contacts %}
                <tr>
                    <td headers="title"><a href="{{ path('admin_contact_show', { 'id': contact.id }) }}">{{ contact.name }}</a></td>
                    <td headers="costunit">
                        {% if contact.costunit is not null %}
                        <a href="{{ path('admin_costunit_show', { 'id': contact.costunit.id }) }}">{{ contact.costunit.name }}</a>
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% endif %}
{% endblock %}