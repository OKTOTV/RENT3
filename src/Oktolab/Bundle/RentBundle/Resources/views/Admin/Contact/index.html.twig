{% extends 'OktolabRentBundle:Admin:Contact\\base.html.twig' %}

{% block buttons %}
{% endblock %}
{% block content %}
    {{ parent() }}

    {% if contacts|length == 0 %}
        <br />
        {{ 'admin.contact.zeroContacts' | trans }}
    {% else %}
        <table class="aui">
            <thead>
                <tr>
                    <th id="title">{{ 'admin.contact.name'|trans }}</th>
                    <th id="costunit">{{'admin.contact.costunit'|trans }}</th>
                    <th id="action">{{ 'generic.actions' | trans }}</th>
                </tr>
            </thead>
            <tbody>
            {% for contact in contacts %}
                <tr>
                    <td headers="title">{{ contact.name }}</td>
                    {% if contact.costunit is not null %}
                        <td headers="costunit">{{ contact.costunit.name }}</td>
                    {% else %}
                        <td headers="costunit">{{ 'admin.contact.noCostunit'|trans }}</td>u
                    {% endif %}
                    <td class="action" headers="action">
                        <ul class="menu">
                            <li><a href="{{ path('admin_contact_show', { 'id': contact.id }) }}">{{ 'generic.show' | trans }}</a></li>
                            {% if contact.costunit is not null %}
                                <li><a href="{{ path('admin_costunit_show', { 'id': contact.costunit.id }) }}">{{ 'admin.contact.costunit' | trans }}</a></li>
                            {% endif %}
                        </ul>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% endif %}
{% endblock %}