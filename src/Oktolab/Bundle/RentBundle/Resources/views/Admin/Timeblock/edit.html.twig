{% extends 'OktolabRentBundle:Admin:Timeblock\\base.html.twig' %}

{%block buttons%}
    <a class="aui-button" href="{{ path('admin_timeblock') }}">{{ 'generic.overview' | trans }}</a>
    <a class="aui-button" href="{{ path('admin_timeblock_show', {'id' : timeblock.id}) }}">{{ 'generic.back' | trans }}</a>
{%endblock%}
{% block content %}
    {{ parent() }}

    {{ form_start(edit_form, {'attr': {'class': 'aui oktolab-plupload-form'} }) }}
        <h3>{{ 'admin.timeblock.edit' | trans({'%timeblockTitle%': timeblock.title}) }}</h3>
        <fieldset>
            {{ form_errors(edit_form) }}
            {{ form_row(edit_form.title) }}
            {{ form_row(edit_form.weekdays)}}
            {{ form_row(edit_form.intervalBegin)}}
            {{ form_row(edit_form.intervalEnd)}}
            {{ form_row(edit_form.begin)}}
            {{ form_row(edit_form.end)}}
            {{ form_row(edit_form.eventType) }}
            {{ form_row(edit_form.isActive)}}

            <div class="buttons-container">
                <button class="aui-button aui-button-primary" type="submit">{{ 'generic.submit'|trans}}</button>
            </div>
        </fieldset>
    {{ form_end(edit_form) }}
{% endblock %}