{% extends 'OktolabRentBundle:Admin:Timeblock\\base.html.twig' %}

{% block content %}
    {{ parent() }}

    {{ form_start(form, {'attr': {'class': 'aui'} }) }}
        <h3>{{ 'admin.timeblock.new' | trans }}</h3>
        <fieldset>
            {{ form_errors(form) }}
            {{ form_row(form.title) }}
            {{ form_row(form.weekdays)}}
            {{ form_row(form.intervalBegin)}}
            {{ form_row(form.intervalEnd)}}
            {{ form_row(form.begin)}}
            {{ form_row(form.end)}}
            {{ form_row(form.isActive)}}

            <div class="buttons-container">
                <button class="aui-button aui-button-primary" type="submit">{{'generic.submit'|trans}}</button>
            </div>
        </fieldset>
    {{ form_end(form) }}
{% endblock %}