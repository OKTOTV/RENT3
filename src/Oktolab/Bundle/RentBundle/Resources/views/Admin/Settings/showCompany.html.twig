{% extends 'OktolabRentBundle:Admin:Settings\\base.html.twig' %}

{% block buttons %}
    <a class="aui-button" href="{{ path('admin_setting') }}">{{ 'generic.overview'|trans }}</a>
    <a class="aui-button" href="{{ path('setting_company_edit') }}">{{ 'generic.edit'|trans }}</a>
{% endblock %}

{% block content %}
    {{ parent() }}

    <form class="aui">
        <h3>{{ 'admin.setting.company'|trans }}</h3>
        <fieldset>
            <div class="field-group viewMode">
                <label>{{ 'setting.company.name'|trans }}</label>
                <span class="field-value">{{ settings.name }}</span>
            </div>
            <div class="field-group viewMode">
                <label>{{ 'setting.company.address'|trans }}</label>
                <span class="field-value">{{ settings.address }}</span>
            </div>
            <div class="field-group viewMode">
                <label>{{ 'setting.company.postal_code'|trans }}</label>
                <span class="field-value">{{ settings.postalcode }}</span>
            </div>
            <div class="field-group viewMode">
                <label>{{ 'setting.company.city'|trans }}</label>
                <span class="field-value">{{ settings.city }}</span>
            </div>
            <div class="field-group viewMode">
                <label>{{ 'setting.company.email'|trans }}</label>
                <span class="field-value">{{ settings.email|default('settings.company_email.empty') }}</span>
            </div>
            <div class="field-group viewMode">
                <label>{{ 'setting.company.telnumber'|trans }}</label>
                <span class="field-value">{{ settings.telnumber|default('settings.company_telnumber.empty') }}</span>
            </div>
            <div class="field-group viewMode">
                <label>{{ 'setting.company.additionalText'|trans }}</label>
                <span class="field-value">
                    {% if settings.additionalText is not null %}
                        {{ settings.additionalText }}
                    {% else %}
                        {{ 'admin.setting.noAdditionalText'|trans }}
                    {% endif %}
                </span>
            </div>
        </fieldset>
    </form>
{% endblock %}
