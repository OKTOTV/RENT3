{% extends 'OktolabRentBundle:Admin\\CalendarSorting:base.html.twig' %}
{%block buttons%}
    <a class="aui-button" href="{{ path('orb_calendar_sorting_index') }}">{{ 'calendar.sorting.index' | trans }}</a>
{%endblock%}
{% block content %}
    {{ parent() }}
    <fieldset>
        <div class="aui-navgroup-inner">
        <div class="category-header aui-nav-heading"><strong>{{ 'calendar.sorting.rooms'|trans }}</strong></div>
            <ul class="room_sortable aui-nav">
                {% for room in rooms %}
                <li data-value="{{ room.id }}">
                    {{ room.title }}
                </li>
                {% endfor %}
            </ul>
        </div>
    </fieldset>
{% endblock %}