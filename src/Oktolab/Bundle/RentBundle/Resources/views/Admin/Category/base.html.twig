{% extends 'OktolabRentBundle:Admin:layout.html.twig' %}
{% import 'OktolabRentBundle::aui_tools.html.twig' as macro %}

{% set highlight_action = "category" %}

{% block content %}
    {% for flashMessage in app.session.flashbag.get('error') %}
        {{ macro.aui_message(flashMessage, 'error') }}
    {% endfor %}

    {% for flashMessage in app.session.flashbag.get('success') %}
        {{ macro.aui_message(flashMessage, 'success') }}
    {% endfor %}

    <h1 class="admin-heading">{{ 'Categories' | trans }}</h1>
    <p class="admin-subtitle">Eine Kategorie wird in Oktolab RENT genutzt um Gegenst√§nde zu kategorisieren.</p>

    <div class="aui-toolbar2">
        <div class="aui-toolbar2-inner">
            <div class="aui-toolbar2-primary">
                <div id="button-set1" class="aui-buttons">
                    <a class="aui-button" href="{{ path('inventory_category') }}">{{ 'Overview' | trans }}</a>
                    <a class="aui-button" href="{{ path('inventory_category_new') }}">{{ 'Add new Category' | trans }}</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}