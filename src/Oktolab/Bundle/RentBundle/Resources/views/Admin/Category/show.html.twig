{% extends 'OktolabRentBundle:Admin\\Category:base.html.twig' %}

{%block buttons%}
    <a class="aui-button" href="{{ path('inventory_category') }}">{{'generic.overview'|trans}}</a>
    <a class="aui-button" href="{{ path('inventory_category_edit', { 'id': category.id }) }}">{{ 'generic.edit' | trans }}</a>
{%endblock%}
{% block content %}
    {{ parent() }}

    <h3>{{ 'Title' | trans }}</h3>
    <p>{{ category.title }}</p>

    <h3>{{ 'Items in Category' | trans }}</h3>
    <table class="aui">
        <thead>
            <tr>
                <th id="name">{{ 'Title' | trans }}</th>
                <th>{{ 'Description' | trans }}</th>
                <th>{{ 'Barcode' | trans }}</th>
                <th id="action">{{ 'Actions' | trans }}</th>
            </tr>
        </thead>
        <tbody>
            {% for item in category.items %}
                <tr>
                    <td headers="name">{{ item.title }}</td>
                    <td>{{ item.description }}</td>
                    <td>{{ item.barcode }}</td>
                    <td class="action" headers="action">
                        <ul class="menu">
                            <li><a href="{{ path('inventory_item_show', { 'id': item.id } ) }}">{{ 'show' | trans }}</a></li>
                        </ul>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
