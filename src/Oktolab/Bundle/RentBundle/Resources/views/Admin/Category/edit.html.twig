{% extends 'OktolabRentBundle:Admin\\Category:base.html.twig' %}

{% block content %}
    {{ parent() }}

    {{ form_start(edit_form, {'attr': {'class': 'aui'} }) }}
        <h3>{{ 'Edit category' | trans }}</h3>
        <fieldset>
            <legend><span>{{ 'Category' | trans }}</span></legend>
            {{ form_errors(edit_form) }}
            {{ form_row(edit_form.title) }}

            <div class="buttons-container">
                <button class="aui-button aui-button-primary" type="submit">{{ 'Submit' | trans }}</button>
            </div>
        </fieldset>
    {{ form_end(edit_form) }}
{% endblock %}