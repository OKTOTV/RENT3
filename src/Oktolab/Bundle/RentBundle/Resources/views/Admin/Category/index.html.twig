{% extends 'OktolabRentBundle::layout.html.twig' %}

{% block content_header %}
    <div class="aui-page-header-inner">
        <div class="aui-page-header-image">
            <div class="aui-avatar aui-avatar-xlarge aui-avatar-project">
                <div class="aui-avatar-inner">
                    <img src="static/img/none.png">
                </div>
            </div>
        </div>
        <div class="aui-page-header-main">
            <h1>{{ "Inventory category list" | trans }}</h1>
        </div>
        <div class="aui-page-header-actions">
            <div class="aui-buttons">
                <div class="aui-buttons">
                    <a class="aui-button" href="{{ path('inventory_category_new') }}">{{"New category" | trans}}</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block content %}
    <table class="aui">
        <thead>
            <tr>
                <th id="name">{% trans %}Title{% endtrans %}</th>
                <th id="items">{{"Items" | trans}}</th>
                <th id="action">{% trans %}Actions{% endtrans %}</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td headers="name">{{ entity.title }}</td>
                <td headers="items">{{ entity.items | length }}</td>
                <td class="action" headers="action">
                    <ul class="menu">
                        <li>
                            <a href="{{ path('inventory_category_show', { 'id': entity.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('inventory_category_edit', { 'id': entity.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}