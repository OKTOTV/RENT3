{% extends 'OktolabRentBundle::layout.html.twig' %}

{% block content_header %}
    <div class="aui-page-header-inner">
        <div class="aui-page-header-image">
            <div class="aui-avatar aui-avatar-xlarge aui-avatar-project">
                <div class="aui-avatar-inner">
                    <img src="{{ asset('aui-5.1/images/project-avatar-blue-64@2x.png') }}" />
                </div>
            </div>
        </div>
        <div class="aui-page-header-main">
            <ol class="aui-nav aui-nav-breadcrumbs">
                <li>{{ 'generic.inventory'|trans }}</li>
            </ol>
            <h1>{{ 'inventory.set.sets'|trans }}</h1>
        </div>
        <div class="aui-page-header-actions">
            <div class="aui-buttons">
                <div class="aui-buttons">
                    <a class="aui-button" href="{{ path('inventory_set_new') }}"><span class="aui-icon aui-icon-small aui-iconfont-add">Add</span> {{ 'inventory.set.new'|trans }}</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block content %}
    <table class="aui">
        <thead>
            <tr>
                <th id="name">{{'inventory.set.title'|trans}}</th>
                <th>{{'inventory.set.description'|trans}}</th>
                <th>{{'inventory.set.items'|trans}}</th>
                <th id="action">{{'generic.actions'|trans}}</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td headers="name">{{ entity.title }}</td>
                <td>{{ entity.description }}</td>
                <td>{{ entity.items | length }}</td>
                <td class="action" headers="action">
                    <ul class="menu">
                        <li>
                            <a href="{{ path('inventory_set_show', { 'id': entity.id }) }}">{{'generic.show'|trans}}</a>
                        </li>
                        <li>
                            <a href="{{ path('inventory_set_edit', { 'id': entity.id }) }}">{{'generic.edit'|trans}}</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
