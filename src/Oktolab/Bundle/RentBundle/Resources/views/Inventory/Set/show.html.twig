{% extends 'OktolabRentBundle::layout.html.twig' %}

{% block content_header %}
    <div class="aui-page-header-inner">
        <div class="aui-page-header-image">
            <div class="aui-avatar aui-avatar-xlarge aui-avatar-project">
                <div class="aui-avatar-inner">
                    {% if set.picture is not null %}
                        <a href="{{ set.picture.getRelativePath | apply_filter('page_avatar_full') }}" class="fancybox">
                            <img src="{{ set.picture.getRelativePath | apply_filter('page_avatar') }}" />
                        </a>
                    {% endif %}
                </div>
            </div>
        </div>
        <div class="aui-page-header-main">
            <h1>{{set.title}}</h1>
            <h3>Barcode: </h3>
        </div>
        <div class="aui-page-header-actions">
            <div class="aui-buttons">
                <div class="aui-buttons">
                    <a class="aui-button" href="{{ path('inventory_set_edit', { 'id' : set.id }) }}">Editieren</a>
                    <a class="aui-button" href="{{ path('inventory_set') }}">{% trans %}Back to list{% endtrans %}</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block content %}
    <div class="aui-page-panel">
        <div class="aui-page-panel-inner">
            <section class="aui-page-panel-content">
                {% for attachment in set.attachments %}
                    <img src="{{ sauce(attachment) }}" />
                {% endfor %}
                <h3>{% trans %}Description{% endtrans %}</h3>
                <p>{{ set.description }}</p>

                <h3>{% trans %}Items{% endtrans %}</h3>
                <table class="aui">
                    <thead>
                        <tr>
                            <th id="name">{% trans %}Title{% endtrans %}</th>
                            <th>{% trans %}Description{% endtrans %}</th>
                            <th>{% trans %}Barcode{% endtrans %}</th>
                            <th>{% trans %}Buydate{% endtrans %}</th>
                            <th>{% trans %}Serialnumber{% endtrans %}</th>
                            <th>{% trans %}Vendor{% endtrans %}</th>
                            <th>{% trans %}Modelnumber{% endtrans %}</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for item in set.getItems %}
                            <tr>
                                <td headers="name">{{ item.title }}</td>
                                <td>{{ item.description }}</td>
                                <td>{{ item.barcode }}</td>
                                <td>{% if item.buyDate %}{{ item.buyDate|date('Y-m-d') }}{% endif %}</td>
                                <td>{{ item.serialNumber }}</td>
                                <td>{{ item.vendor }}</td>
                                <td>{{ item.modelNumber }}</td>
                                <td class="action" headers="action">
                                    <ul class="menu">
                                        <li>
                                            <a href="{{ path('inventory_item_show', { 'id': item.id }) }}">{% trans %}show{% endtrans %}</a>
                                        </li>
                                        <li>
                                            <a href="{{ path('inventory_item_edit', { 'id': item.id }) }}">{% trans %}edit{% endtrans %}</a>
                                        </li>
                                    </ul>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </section>
        </div>
    </div>
{% endblock %}
