{% extends 'OktolabRentBundle::secureAreaLayout.html.twig' %}

{% block content_header %}
    <div class="aui-page-header-inner">
        <div class="aui-page-header-image">
            <div class="aui-avatar aui-avatar-xlarge aui-avatar-project">
                <div class="aui-avatar-inner">
                    <img src="static/img/none.png">
                </div>
            </div>
        </div>
        <div class="aui-page-header-main">
            <h1>Inventar Item Neu</h1>
        </div>
        <div class="aui-page-header-actions">
            <div class="aui-buttons">
                <div class="aui-buttons">
                    <a class="aui-button" href="{{ path('inventory_item') }}">{% trans %}Back to list{% endtrans %}</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block content %}
    <div class="aui-page-panel">
        <div class="aui-page-panel-inner">
            <section class="aui-page-panel-content">

                <form action="{{ path('inventory_item_create') }}" method="post" {{ form_enctype(form) }} class="aui">
                    {{ form_start(form) }}
                        <fieldset>
                            {{ form_errors(form) }}
                            {{ form_row(form.title) }}
                            {{ form_row(form.description, {'attr': {'placeholder': 'Description of the item'} }) }}
                            {{ form_row(form.barcode) }}
                            {{ form_row(form.buyDate) }}
                            {{ form_row(form.serialNumber) }}
                            {{ form_row(form.vendor) }}
                            {{ form_row(form.modelNumber) }}

                            <div class="buttons-container">
                                <input class="button submit" type="submit">
                            </div>
                        </fieldset>
                    {{ form_end(form) }}
                </form>
            </section>
        </div>
    </div>
{% endblock %}
