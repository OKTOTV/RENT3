{% extends 'OktolabRentBundle::layout.html.twig' %}

{% block content_header %}
    <div class="aui-page-header-inner">
        <div class="aui-page-header-image">
            <div class="aui-avatar aui-avatar-xlarge aui-avatar-project">
                <div class="aui-avatar-inner">
                    <img src="static/img/none.png">
                </div>
            </div>
        </div>
        <div class="aui-page-header-main">
            <h1>{{ 'inventory.items' | trans}}</h1>
        </div>
        <div class="aui-page-header-actions">
            <div class="aui-buttons">
                <div class="aui-buttons">
                    <a class="aui-button" href="{{ path('inventory_item_new') }}">{{'inventory.item.new' | trans}}</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block content %}
    {{ aui_pager('inventory_item', nbPages, currentPage, maxPages) }}
    <table class="aui inventory_item">
        <thead>
            <tr>
                <th id="name" colspan="2">{{ 'inventory.item.title'|trans }}</th>
                <th>{{ 'inventory.item.barcode'|trans }}</th>
                <th>{{ 'inventory.item.vendor'|trans }}</th>
                <th>{{ 'inventory.item.category'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td headers="name" class="entity_avatar">
                {% if entity.picture is not null %}
                        <img src="{{ entity.picture.getRelativePath|apply_filter('list_avatar') }}" />
                    {% else %}
                        <img src="{{ asset('aui-5.1/images/project-avatar-blue-32@2x.png') }}" alt="{{ entity.title }}" />
                    {% endif %}
                </td>
                <td>
                    <a href="{{ path('inventory_item_show', { 'id': entity.id }) }}">{{ entity.title }}</a>
                    {% if entity.set is not null %}<span class="smalltext">({{ entity.set.title }})</span>{% endif %}
                    <p>
                        <span>{{ 'inventory.item.serialnumber'|trans }}: {{ entity.serialNumber }}</span>
                    </p>
                </td>
                <td>{{ entity.barcode }}</td>
                <td>{{ entity.vendor }}</td>
                <td>{% if entity.category is not null %}{{ entity.category.title }}{% endif %}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {{ aui_pager('inventory_item', nbPages, currentPage, maxPages) }}
{% endblock %}
