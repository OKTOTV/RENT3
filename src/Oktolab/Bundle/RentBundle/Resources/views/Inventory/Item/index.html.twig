{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Inventory\Item list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>Barcode</th>
                <th>Buydate</th>
                <th>Serialnumber</th>
                <th>Vendor</th>
                <th>Modelnumber</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('inventory_item_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.title }}</td>
                <td>{{ entity.description }}</td>
                <td>{{ entity.barcode }}</td>
                <td>{% if entity.buyDate %}{{ entity.buyDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.serialNumber }}</td>
                <td>{{ entity.vendor }}</td>
                <td>{{ entity.modelNumber }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('inventory_item_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('inventory_item_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('inventory_item_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
