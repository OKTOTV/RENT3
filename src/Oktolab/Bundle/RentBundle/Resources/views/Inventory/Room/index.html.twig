{% extends 'OktolabRentBundle::layout.html.twig' %}

{% block content_header %}
    <div class="aui-page-header-inner">
        <div class="aui-page-header-image">
            <div class="aui-avatar aui-avatar-xlarge aui-avatar-project">
                <div class="aui-avatar-inner">
                    <img src="static/img/none.png">
                </div>
            </div>
        </div>
        <div class="aui-page-header-main">
            <ol class="aui-nav aui-nav-breadcrumbs">
                    <li>Inventar</li>
            </ol>
            <h1>{{'inventory.room.rooms'|trans}}</h1>
        </div>
        <div class="aui-page-header-actions">
            <div class="aui-buttons">
                <div class="aui-buttons">
                    <a class="aui-button" href="{{ path('inventory_room_new') }}">{{'inventory.room.new'|trans}}</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block content %}
    <table class="aui">
        <thead>
            <tr>
                <th id="name">{{'inventory.room.title'|trans}}</th>
                <th>{{'inventory.room.description'|trans}}</th>
                <th>{{'inventory.room.barcode'|trans}}</th>
                <th id="action">{{'generic.actions'|trans}}</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td headers="name">{{ entity.title }}</td>
                <td>{{ entity.description }}</td>
                <td>{{ entity.barcode }}</td>
                <td class="action" headers="action">
                    <ul class="menu">
                        <li>
                            <a href="{{ path('inventory_room_show', { 'id': entity.id }) }}">{{'generic.show'|trans}}</a>
                        </li>
                        <li>
                            <a href="{{ path('inventory_room_edit', { 'id': entity.id }) }}">{{'generic.edit'|trans}}</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}